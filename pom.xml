<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>site.morn.framework</groupId>
  <artifactId>morn-framework</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>

  <modules>
    <module>morn-dependencies</module>
    <module>morn-services</module>
    <module>morn-test</module>
  </modules>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <java.version>1.8</java.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <maven.compiler.target>${java.version}</maven.compiler.target>

    <boot.version>1.5.15.RELEASE</boot.version>
    <timely.version>1.0-SNAPSHOT</timely.version>
    <morn.version>1.0.0-SNAPSHOT</morn.version>
    <condition.version>1.0-SNAPSHOT</condition.version>
    <shiro.version>1.3.2</shiro.version>
    <fastjson.version>1.2.39</fastjson.version>
    <lombok.version>1.18.4</lombok.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>${boot.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>

      <!--依赖模块-->
      <dependency>
        <groupId>org.apache.shiro</groupId>
        <artifactId>shiro-spring</artifactId>
        <version>${shiro.version}</version>
      </dependency>
      <dependency>
        <groupId>org.springframework.data</groupId>
        <artifactId>spring-data-jpa-condition</artifactId>
        <version>${condition.version}</version>
      </dependency>
      <dependency>
        <groupId>com.alibaba</groupId>
        <artifactId>fastjson</artifactId>
        <version>${fastjson.version}</version>
      </dependency>

      <!--Morn-->
      <dependency>
        <groupId>site.morn</groupId>
        <artifactId>morn-core</artifactId>
        <version>${morn.version}</version>
      </dependency>

      <!--Morn Boot-->
      <dependency>
        <groupId>site.morn.boot</groupId>
        <artifactId>morn-boot-autoconfigure</artifactId>
        <version>${morn.version}</version>
      </dependency>
      <dependency>
        <groupId>site.morn.boot</groupId>
        <artifactId>morn-boot-core</artifactId>
        <version>${morn.version}</version>
      </dependency>

      <!--本地模块-->
      <dependency>
        <groupId>site.morn.framework</groupId>
        <artifactId>morn-test</artifactId>
        <version>${timely.version}</version>
      </dependency>
      <dependency>
        <groupId>site.morn.framework</groupId>
        <artifactId>morn-core</artifactId>
        <version>${timely.version}</version>
      </dependency>
      <dependency>
        <groupId>site.morn.framework</groupId>
        <artifactId>morn-config</artifactId>
        <version>${timely.version}</version>
      </dependency>
      <dependency>
        <groupId>site.morn.framework</groupId>
        <artifactId>morn-web</artifactId>
        <version>${timely.version}</version>
      </dependency>
      <dependency>
        <groupId>site.morn.framework</groupId>
        <artifactId>morn-jpa</artifactId>
        <version>${timely.version}</version>
      </dependency>
      <dependency>
        <groupId>site.morn.framework</groupId>
        <artifactId>morn-shiro</artifactId>
        <version>${timely.version}</version>
      </dependency>
      <!--Services Start-->
      <dependency>
        <groupId>site.morn.framework</groupId>
        <artifactId>morn-services</artifactId>
        <version>${timely.version}</version>
      </dependency>
      <dependency>
        <groupId>site.morn.framework</groupId>
        <artifactId>morn-services-base</artifactId>
        <version>${timely.version}</version>
      </dependency>
      <dependency>
        <groupId>site.morn.framework</groupId>
        <artifactId>morn-services-user</artifactId>
        <version>${timely.version}</version>
      </dependency>
      <dependency>
        <groupId>site.morn.framework</groupId>
        <artifactId>morn-services-login</artifactId>
        <version>${timely.version}</version>
      </dependency>
      <dependency>
        <groupId>site.morn.framework</groupId>
        <artifactId>morn-services-notice</artifactId>
        <version>${timely.version}</version>
      </dependency>
      <!--Services End-->
    </dependencies>
  </dependencyManagement>
</project>
