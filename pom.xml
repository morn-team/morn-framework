<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>morn-framework</artifactId>

  <build>
    <pluginManagement>
      <plugins>
        <!--Sonar插件-->
        <plugin>
          <artifactId>sonar-maven-plugin</artifactId>
          <groupId>org.sonarsource.scanner.maven</groupId>
        </plugin>
        <!--源码插件-->
        <plugin>
          <artifactId>maven-source-plugin</artifactId>
          <groupId>org.apache.maven.plugins</groupId>
        </plugin>
        <!--单元测试覆盖率插件-->
        <plugin>
          <artifactId>jacoco-maven-plugin</artifactId>
          <groupId>org.jacoco</groupId>
          <version>${jacoco.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <!--源码插件-->
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>jar</goal>
            </goals>
            <id>attach-sources</id>
          </execution>
        </executions>
        <groupId>org.apache.maven.plugins</groupId>
      </plugin>
      <!--静态检查插件-->
      <plugin>
        <artifactId>sonar-maven-plugin</artifactId>
        <groupId>org.sonarsource.scanner.maven</groupId>
      </plugin>
      <!--单元测试覆盖率插件-->
      <plugin>
        <artifactId>jacoco-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>prepare-agent</goal>
              <goal>report</goal>
            </goals>
          </execution>
        </executions>
        <groupId>org.jacoco</groupId>
      </plugin>
      <!--发布插件，自动Release-->
      <plugin>
        <artifactId>nexus-staging-maven-plugin</artifactId>
        <configuration>
          <autoReleaseAfterClose>true</autoReleaseAfterClose>
          <nexusUrl>https://oss.sonatype.org/</nexusUrl>
          <serverId>sonatype-nexus-staging</serverId>
        </configuration>
        <extensions>true</extensions>
        <groupId>org.sonatype.plugins</groupId>
        <version>1.6.8</version>
      </plugin>
      <!--Maven版本管理插件-->
      <plugin>
        <artifactId>versions-maven-plugin</artifactId>
        <configuration>
          <generateBackupPoms>false</generateBackupPoms>
        </configuration>
        <groupId>org.codehaus.mojo</groupId>
        <version>2.3</version>
      </plugin>
    </plugins>
  </build>
  <dependencyManagement>
    <dependencies>

      <dependency>
        <artifactId>lombok</artifactId>
        <groupId>org.projectlombok</groupId>
        <version>${lombok.version}</version>
      </dependency>

      <dependency>
        <artifactId>spring-boot-dependencies</artifactId>
        <groupId>org.springframework.boot</groupId>
        <scope>import</scope>
        <type>pom</type>
        <version>${boot.version}</version>
      </dependency>

      <!--依赖模块-->
      <dependency>
        <artifactId>shiro-spring</artifactId>
        <groupId>org.apache.shiro</groupId>
        <version>${shiro.version}</version>
      </dependency>
      <dependency>
        <artifactId>fastjson</artifactId>
        <groupId>com.alibaba</groupId>
        <version>${fastjson.version}</version>
      </dependency>

      <!--Morn-->
      <dependency>
        <artifactId>morn-core</artifactId>
        <groupId>site.morn</groupId>
        <version>${morn.version}</version>
      </dependency>

      <!--Morn Boot-->
      <dependency>
        <artifactId>morn-boot-autoconfigure</artifactId>
        <groupId>site.morn.boot</groupId>
        <version>${morn.version}</version>
      </dependency>
      <dependency>
        <artifactId>morn-boot-core</artifactId>
        <groupId>site.morn.boot</groupId>
        <version>${morn.version}</version>
      </dependency>

      <!--本地模块-->
      <dependency>
        <artifactId>morn-test</artifactId>
        <groupId>site.morn.framework</groupId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <artifactId>morn-core</artifactId>
        <groupId>site.morn.framework</groupId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <artifactId>morn-web</artifactId>
        <groupId>site.morn.framework</groupId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <artifactId>morn-jpa</artifactId>
        <groupId>site.morn.framework</groupId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <artifactId>morn-shiro</artifactId>
        <groupId>site.morn.framework</groupId>
        <version>${project.version}</version>
      </dependency>
      <!--Services Start-->
      <dependency>
        <artifactId>morn-services</artifactId>
        <groupId>site.morn.framework</groupId>
        <version>${project.version}</version>
      </dependency>
      <!--Services End-->
    </dependencies>
  </dependencyManagement>
  <distributionManagement>
    <repository>
      <id>nexus-releases</id>
      <name>Nexus Releases Repository</name>
      <url>http://10.28.124.190:8081/nexus/content/repositories/releases/</url>
    </repository>
    <snapshotRepository>
      <id>nexus-snapshots</id>
      <name>Nexus Snapshots Repository</name>
      <url>http://10.28.124.190:8081/nexus/content/repositories/snapshots/</url>
    </snapshotRepository>
  </distributionManagement>
  <groupId>site.morn.framework</groupId>

  <modelVersion>4.0.0</modelVersion>

  <modules>
    <module>morn-dependencies</module>
    <module>morn-services</module>
    <module>morn-test</module>
  </modules>

  <packaging>pom</packaging>

  <properties>
    <boot.version>1.5.15.RELEASE</boot.version>
    <condition.version>1.0-SNAPSHOT</condition.version>
    <fastjson.version>1.2.39</fastjson.version>
    <jacoco.version>0.8.2</jacoco.version>
    <java.version>1.8</java.version>

    <lombok.version>1.18.4</lombok.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>

    <maven.compiler.target>${java.version}</maven.compiler.target>
    <morn.version>1.0.0-SNAPSHOT</morn.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

    <shiro.version>1.3.2</shiro.version>
  </properties>

  <repositories>
    <repository>
      <id>sonatype-nexus-snapshots</id>
      <name>Sonatype Nexus Snapshots</name>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </repository>
  </repositories>

  <version>1.0.0-SNAPSHOT</version>
</project>
